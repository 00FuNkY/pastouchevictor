// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["groupBy"]
}

model admin {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  password  String  
}

model Properties {
  id        Int    @id @default(autoincrement())
  Title     String  @unique
  Description  String? 
  Lieux     String  
  Picture1 String?
  Picture2 String?
  Picture3 String?
  Price Int
  RoyalFamily RoyalFamily @relation(fields: [RoyalFamilyId], references:[id])
  RoyalFamilyId  Int
}

model RoyalFamily {
  id      Int @id @default(autoincrement())
  Name String
  RoyalTitle String?
  Picture String?
  Properties Properties[]
}